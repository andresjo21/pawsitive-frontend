<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.fragment_login">

    <LinearLayout
        android:id="@+id/login_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/ic_pawsitive_foreground" />

        <include
            android:id="@+id/layout_login"
            layout="@layout/layout_log_in_register_form" />

        <Button
            android:id="@+id/signUpFormLoginButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/blackBotton"
            android:text="@string/signUpText"
            android:textColor="@color/white"
            app:cornerRadius="15dp" />


    </LinearLayout>
</FrameLayout>