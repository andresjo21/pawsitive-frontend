<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80CCCCCC"/> <!-- Color de la sombra, ajusta la opacidad y el color según sea necesario -->
            <corners android:radius="10dp"/> <!-- Radio de las esquinas, ajusta según sea necesario -->
        </shape>
    </item>
    <!-- Contenido del fondo con borde -->
    <item android:top="3dp" android:right="2dp" android:bottom="3dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/inputBackground"/> <!-- Fondo del EditText, cámbialo como necesites -->
            <corners android:radius="10dp"/> <!-- Radio de las esquinas redondeadas -->
            <stroke android:width="3.5dp" android:color="#79C381"/> <!-- Opcional: Borde del EditText -->
        </shape>
    </item>
</layer-list>
